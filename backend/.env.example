# Environment Configuration
# Copy this file to .env and fill in the values

# MongoDB (Primary Database)
MONGO_URL=mongodb://localhost:27017
MONGO_DB_NAME=research_assistant

# Redis (Caching & Celery)
REDIS_URL=redis://localhost:6379/0

# Vector DB (Optional)
VECTOR_DB_URL=http://localhost:6333
VECTOR_DB_API_KEY=

# LLM Providers
GEMINI_API_KEY=your_gemini_key
OPENAI_API_KEY=your_openai_key

# OpenAlex (no API key needed, mailto gets 10x rate limit)
OPENALEX_MAILTO=your_email@example.com

# Authentication
# IMPORTANT: Generate a strong secret for production: openssl rand -hex 32
JWT_SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# Email (SMTP) - Optional, logs emails in development if not configured
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_USE_TLS=true

# OAuth - Google (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Frontend URL (for email verification/reset links)
FRONTEND_URL=http://localhost:3000

# Service Settings
LOG_LEVEL=INFO
ENVIRONMENT=development
